<form style="display: table-cell; vertical-align: middle">
    <table>
      <tbody>
        <tr>
          <td>
            <gr-input label="text search" name="search" type="search" value="{{ property('textSearch') }}"></gr-input>
          </td>
          {% if property('filters')|length %}
            <td>
                <apie-filter-overview class="unprocessed-filter"></apie-filter-overview>
                <script>
                (function (elm) {
                  elm.classList.remove('unprocessed-filter');
                  elm.filterNames = {{ property('filters') | json_encode | raw }};
                  elm.filters = {{ property('currentFilter') | json_encode | raw }};
                }(document.querySelector('apie-filter-overview.unprocess-filter')));
                </script>
                <div style="display: flex">
                {% for filterName in property('filters')%}
                    <div>
                        <gr-input label="{{ filterName }}" name="query[{{ filterName }}]" type="text" value="{{ property('currentFilter')[filterName] | default('') }}"></gr-input>
                    </div>
                {% endfor %}
                </div>
            </td>
          {% endif %}
          <td>
            <gr-button variant="secondary" type="submit" large expand="block">Search</gr-button>
          </td>
        </tr>
      </tbody>
    </table>
  </form>