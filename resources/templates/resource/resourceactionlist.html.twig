<div style="width: 80%; padding: 15PX; float: right; display: table;">
  <form style="display: table-cell; vertical-align: middle">
    <table>
      <tbody>
        <tr>
          <td>
            <gr-input name="search" type="search" value="{{ property('textSearch') }}"></gr-input>
          </td>
          <td>
            <gr-button variant="secondary" type="submit" large expand="block">Search</gr-button>
          </td>
        </tr>
      </tbody>
    </table>
  </form>
  <div style="display: table-cell; vertical-align: middle">
    {% for action in property('actions') %}
      <gr-button variant="primary" onclick="location.href = {{ action.getUrl(property('config')) | json_encode}}">{{ action.name }}</gr-button>
    {% endfor %}
  </div>
</div>