<gr-input
    label="{{ property('name') }}"
    name="{{ property('name') }}"
    value="{{ property('value') }}"
    type="{{ property('type') }}"
    {% for key, value in property('additionalAttributes') %}
    {{ key }}="{{ value }}"
    {% endfor %}
    {%- if (property('validationError')) -%}
    invalid invalid-text="{{ property('validationError') }}"
    {%- endif -%}
    >
</gr-input>